<h1>Listing screenshots</h1>

<table>
  <tr>
    <th>Batch</th>
    <th>Job</th>
    <th>Browser</th>
    <th>Url</th>
    <th>Screenshot</th>
    <th colspan="3"></th>
  </tr>

<% @screenshots.each do |screenshot| %>
  <tr>
    <td><%=h screenshot.batch_id %></td>
    <td><%=h screenshot.browser_name %></td>
    <td><%=h screenshot.browser_version %></td>
    <td><%=h screenshot.url %></td>
    <td><a href="<%=h screenshot.screenshot_path %>" target="_blank">view</a></td>
    <td><%= link_to 'Show', screenshot %></td>
    <td><%= link_to 'Edit', edit_screenshot_path(screenshot) %></td>
    <td><%= link_to 'Destroy', screenshot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New screenshot', new_screenshot_path %>