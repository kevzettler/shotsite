<div class="section_header">
  <h1>Your Recent Orders</h1>
  <%= link_to 'New order?', new_order_path, :id => "new_order_expand" %>
</div>

<%= render :partial => "shared/newOrder" %> 

<table>
  <tr>
    <th>Date</th>
    <th>Price</th>
    <th>Shots</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h Date.civil(order.created_at.year, order.created_at.month, order.created_at.day)%></td>
    <td><%=h order.price %></td>
    <td><%=h order.shots %></td>
  </tr>
<% end %>
</table>

<br />

